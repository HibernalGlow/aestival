{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aestival",
  "version": "3.1.0",
  "identifier": "com.aestival.flow",
  "build": {
    "beforeDevCommand": "yarn dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "aestival",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/main"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "Python工具链可视化编排与执行平台",
    "longDescription": "AestivalFlow 是一个结合 Python 数据处理能力和现代化用户界面的桌面应用程序，支持可视化工具编排和执行。",
    "copyright": "© 2024 HibernalGlow. All rights reserved."
  }
}